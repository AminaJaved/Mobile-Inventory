
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustomerInfo</title>
</head>
<body>
    <h3>List Customers</h3>
    <table cellpadding="2" border="1">
        <tr>
            <th>CustomerID</th>
            <th>UserName</th>
            <th>EmailAddress</th>
            <th>HomeAdress</th>
            <th>ContactNumber</th>
        </tr>
        @foreach (var p in ViewBag.ListCustomers)
        {
            <tr>
                <td>@p.CustomerID</td>
                <td>@p.UserName</td>
                <td>@p.EmailAddress</td>
                <td>@p.HomeAdress</td>
                <td>@p.ContactNumber</td>
            </tr>

        }
    </table>
    <br /><br />
    <a href="@Url.Action("Export","Admin")">Export Report</a>

</body>
</html>
